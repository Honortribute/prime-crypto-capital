  <script>
    async function fetchBTC() {
      try {
        const res = await fetch('https://api.coindesk.com/v1/bpi/currentprice/BTC.json');
        const data = await res.json();
        const price = data.bpi.USD.rate;
        document.getElementById("btcPrice").textContent = `Current BTC Price: $${price}`;
      } catch {
        document.getElementById("btcPrice").textContent = "BTC price unavailable";
      }
    }
    window.onload = fetchBTC;
  </script>
